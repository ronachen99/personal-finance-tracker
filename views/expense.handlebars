<div class="container">
  <div class="cow">
    <h2>my expenses</h2>
    <div id="modal-js-example" class="modal">
      <div class="modal-background"></div>
      <div class="modal-content">
        <div class="box">
          <div class="container">
            <h3 class="has-text-centered">add expense</h3>
            <!-- Expense Form -->
            <div class="columns is-centered">
              <div class="column is-half">
                <form id="expenseForm" class="expenseForm box">
                  <div class="field">
                    <label class="label" for="expenseName">expense name</label>
                    <div class="control">
                      <input class="input is-warning" type="text" id="expenseName" name="expenseName" />
                    </div>
                  </div>
                  <div class="field">
                    <label class="label" for="expenseAmount">expense amount</label>
                    <div class="control">
                      <input class="input is-warning" type="number" id="expenseAmount" name="expenseAmount" min="0" />
                    </div>
                  </div>
                  <div class="control buttons is-small is-right">
                    <button class="button is-rounded is-warning is-outlined" type="submit" id="submit">
                      ðŸ« 
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{#if expenses.length}}
    <div class="expense-list columns">
      {{#each expenses as |expense|}}
      <div class="animate__animated animate__flipInX column">
        <ul>
          <div class='box custom-box'>
            <li>Date: {{format_date expense.date_created}} </li>
            <li>Description: {{expense.name}}</li>
            <li>Expense: ${{expense.amount}}</li>
          </div>
        </ul>
        <div class="buttons is-right">
          <button class="button is-danger is-rounded is-outlined is-small" data-id="{{expense.id}}">X</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
    <!-- Button trigger modal -->
    <div class="buttons is-centered is-flex-direction-column is-align-items-center">
      <button type="submit" class="js-modal-trigger button is-outlined is-dark is-rounded"
        data-target="modal-js-example">+</button>
    </div>
  </div>
</div>

<script src='./js/add.js'></script>
<script src="./js/expense.js"></script>