  <div {{#if logged_in}} class="cow">
    <div class="columns">{{/if}}
      <div class="column is-flex is-justify-content-center">
        <img src='./assets/images/cowpic.jpg' alt='Cow with money and sunglasses' />
      </div>
      {{#if logged_in}}
      <div class="column">
        <h2>welcome back {{name}} <img src='./assets/images/cow.png' alt='Cash cow icon' /></h2>
