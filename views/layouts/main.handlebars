            <a class="navbar-item" href="/expense">expense</a>
            <a class="navbar-item" href="/report">report</a>
          </div>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <button class="is-warning button" id="logout">log out</button>
          </div>
        </div>
      </nav>
      {{/if}}
    </section>
  </header>
  <div class="modal" id="logoutModal"></div>
  <main>
    {{!-- <!-- Render the sub layout --> --}}
    {{{body}}}
  </main>
  {{!-- <!-- Custom JavaScript file "navbar.js" --> --}}
  <script src='./js/navbar.js'></script>
